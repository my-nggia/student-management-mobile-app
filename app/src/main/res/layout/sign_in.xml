<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn"
    android:orientation="vertical"
    android:background="@color/black"
    android:padding="30dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In."
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/fire_orange"
        android:layout_gravity=""
        />

    <EditText
        android:id="@+id/email_sign_in"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawablePadding="12dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:hint="Email"
        android:textColorHint="@color/light_dark"
        android:drawableStart="@drawable/baseline_email"
        android:background="@drawable/custom_input"
        />

    <EditText
        android:id="@+id/password_sign_in"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawablePadding="12dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:drawableStart="@drawable/baseline_lock"
        android:hint="Password"
        android:textColorHint="@color/light_dark"
        android:background="@drawable/custom_input" />

    <Button
        android:id="@+id/sign_in_btn"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Sign In"
        android:textSize="24dp"
        android:textColor="@color/fire_orange"
        android:backgroundTint="@color/black"
        />

    <Button
        android:id="@+id/sign_up"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Sign Up"
        android:textSize="18dp"
        android:textColor="@color/cinder"
        android:textStyle="italic"
        android:backgroundTint="@color/black"
        />

</LinearLayout>