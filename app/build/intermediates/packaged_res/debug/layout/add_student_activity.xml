<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddStudentActivity"
    android:background="@color/black"
    android:padding="30dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new student"
        android:textSize="45dp"
        android:textStyle="bold"
        android:textColor="@color/fire_orange"
        android:layout_gravity=""
        />

    <EditText
        android:id="@+id/email_sign_up"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawablePadding="12dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:hint="Email"
        android:textColorHint="@color/light_dark"
        android:drawableStart="@drawable/baseline_email"
        android:background="@drawable/custom_input"
        />

    <EditText
        android:id="@+id/password_sign_up"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawablePadding="12dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:drawableStart="@drawable/baseline_lock_24"
        android:hint="Password"
        android:textColorHint="@color/light_dark"
        android:background="@drawable/custom_input" />

    <EditText
        android:id="@+id/name_sign_up"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawablePadding="12dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/white"
        android:drawableStart="@drawable/baseline_person"
        android:hint="Name"
        android:textColorHint="@color/light_dark"
        android:background="@drawable/custom_input" />

    <EditText
        android:id="@+id/phone_sign_up"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawablePadding="12dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/white"
        android:drawableStart="@drawable/baseline_phone"
        android:hint="Phone"
        android:textColorHint="@color/light_dark"
        android:background="@drawable/custom_input" />

    <TextView
        android:id="@+id/date_tv"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawablePadding="12dp"
        android:ems="10"
        android:background="@drawable/custom_input"
        android:textColor="@color/white"
        android:drawableStart="@drawable/baseline_calendar"
        android:textAlignment="gravity"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cancel_add_btn"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:text="Cancel"
            android:layout_weight="1"
            android:textSize="24dp"
            android:textColor="@color/fire_orange"
            android:backgroundTint="@color/black"
            android:alpha="0.5"
            />

        <Button
            android:id="@+id/add_btn"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:text="Add"
            android:textSize="24dp"
            android:layout_weight="1"
            android:textColor="@color/fire_orange"
            android:backgroundTint="@color/black"
            />
    </LinearLayout>


</LinearLayout>