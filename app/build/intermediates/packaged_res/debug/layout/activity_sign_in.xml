<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn"
    android:orientation="vertical"
    android:background="@color/black"
    android:padding="30dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In."
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/fire_orange"
        android:layout_gravity=""
        />

    <EditText
        android:id="@+id/email_sign_in"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawablePadding="12dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:hint="Email"
        android:textColorHint="@color/light_dark"
        android:drawableStart="@drawable/baseline_email"
        android:background="@drawable/custom_input"
        />

    <EditText
        android:id="@+id/password_sign_in"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawablePadding="12dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:drawableStart="@drawable/baseline_lock_24"
        android:hint="Password"
        android:textColorHint="@color/light_dark"
        android:background="@drawable/custom_input" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your role:"
        android:textColor="@color/fire_orange"
        android:layout_gravity="left"
        android:layout_marginTop="24dp"
        android:textSize="16dp"
        />
    <RadioGroup
        android:id="@+id/btn_group_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/btn_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:textColor="@color/fire_orange"
            android:textSize="16dp"/>

        <RadioButton
            android:id="@+id/btn_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manager"
            android:textColor="@color/fire_orange"
            android:textSize="16dp"/>

        <RadioButton
            android:id="@+id/btn_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            android:textColor="@color/fire_orange"
            android:textSize="16dp"/>
    </RadioGroup>



    <Button
        android:id="@+id/sign_in_btn"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Sign In"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/fire_orange"
        />

</LinearLayout>